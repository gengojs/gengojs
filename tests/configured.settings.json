{
    "global": "__",
    "directory": "./locales",
    "supported": ["en-US", "ja"],
    "default": "en-US",
    "router": false,
    "markdown": false,
    "template": {
        "open": "{{",
        "close": "}}"
    },
    "extension": "yaml",
    "keys": {
        "cookie": "locale",
        "query": "locale"
    },
    "detect": {
        "query": false,
        "subdomain": false,
        "url": false,
        "cookie": false,
        "header": true
    },
    "keywords": {
        "default": "default",
        "translated": "translated",
        "universe": "gengo",
        "plural": "plural"
    },
    "prefix": ""
}
